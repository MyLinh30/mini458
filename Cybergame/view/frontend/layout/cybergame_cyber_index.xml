<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account.xml"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Update room info</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magenest\Cybergame\Block\RoomExtraOption\BeAManager" name="customer_be_a_manager"  template="Magenest_Cybergame::account/cyber/be_a_manager.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
