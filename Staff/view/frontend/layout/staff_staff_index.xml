<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account_index.xml"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Update profile</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magenest\Staff\Block\Staff\BeAStaff" name="customer_be_a_staff" as="staff" template="Magenest_Staff::account/staff/be_a_staff.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
